{{>nav}}
<div class="center">
    <div class="form-container">
        <h2>{{title}}</h2>



        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                {{#each list}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.phone}}</td>
                    <td>
                        <a class="btn btn-success" role="button" href="/employee/{{this._id}}">Edit</a>
                        <a class="btn btn-danger" role="button" href="/employee/delete/{{_id}}">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>


{{>footer}}